<tr class="{bg_class}">
	<td>
		{if("user_link" ne "")}<a href="{user_link}" yf:user_id="{user_id}" class="ajax_user_info">{/if}
			{user_name}
		{if("user_link" ne "")}</a>{/if}
	</td>
	<td><a href="{post_url}">{title}</a></td>
	<td>{text}</td>
	<td>{date}</td>
	{if("delete" eq "1")}
	<td align="center" nowrap>	
		<a href="{delete_link}" onclick="return confirm('{t(Are you sure)}?');"><img height="16" width="16" border="0" src="images/links_delete.gif" alt="{t(Delete)}" /></a>	
	</td>
	{/if}
</tr>

